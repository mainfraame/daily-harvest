  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mentierd/daily-harvest.git"
  },
  "keywords": [
    "daily",
    "harvest",
    "coding",
    "challenge",
    "typescript"
  ],
  "author": "dayne mentier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mentierd/daily-harvest/issues"
  },
  "homepage": "https://github.com/mentierd/daily-harvest#readme",
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "12.12.47",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/?(*.)+(spec).ts"
    ],
    "transform": {
